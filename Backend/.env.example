# DecentralAI Analytics - Environment Configuration
# Copy this file to .env and update with your actual values

# ===== Database Configuration =====
DB_PASSWORD=changeme_secure_password
POSTGRES_DB=analytics
POSTGRES_USER=analyst

# ===== Cardano Configuration =====
CARDANO_NETWORK=testnet
CARDANO_NODE_SOCKET_PATH=/ipc/node.socket

# Blockfrost API (for easier blockchain queries)
BLOCKFROST_API_KEY=your_blockfrost_api_key_here
BLOCKFROST_URL=https://cardano-preprod.blockfrost.io/api/v0

# ===== Hydra Configuration =====
HYDRA_SCRIPTS_TX_ID=
HYDRA_API_HOST=0.0.0.0
HYDRA_API_PORT=4001

# ===== Masumi Network Configuration =====
MASUMI_REGISTRY_URL=http://localhost:8001
MASUMI_PAYMENT_URL=http://localhost:8002
MASUMI_NETWORK=testnet

# Masumi Contract Addresses (Testnet)
MASUMI_REGISTRY_POLICY_ID=e6c57104dfa95943ffab95eafe1f12ed9a8da791678bfbf765b05649
MASUMI_PAYMENT_CONTRACT=addr_test1wp7je4555s7cdqvlcgdnkj34rrpryy8wsst9yvz7e74p2ugy69qgn

# ===== AI & LLM Configuration =====
# OpenAI (for CEO Agent and DS-STAR)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_DS_STAR_MODEL=gpt-4

# ===== Backend API Configuration =====
API_PORT=3001
API_HOST=0.0.0.0
NODE_ENV=development

# JWT for authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# ===== Redis Configuration =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===== Monitoring Configuration =====
GRAFANA_PASSWORD=admin
PROMETHEUS_PORT=9090

# ===== Ogmios Configuration =====
OGMIOS_URL=ws://localhost:1337
OGMIOS_HOST=localhost
OGMIOS_PORT=1337

# ===== Agent Company Configuration =====
CEO_AGENT_MODEL=gpt-4-turbo-preview
CEO_MAX_TOKENS=2000
AGENT_TIMEOUT_SECONDS=300

# Worker agents configuration
MAKER_MIN_VOTERS=3
MAKER_DECOMPOSITION_LEVEL=100
MAKER_SUBTASK_TIMEOUT=300

# ===== Testing Configuration =====
TEST_NETWORK=testnet
TEST_WALLET_MNEMONIC=your_test_wallet_mnemonic_24_words_here

# Load testing
LOAD_TEST_TRANSACTIONS=1000000
LOAD_TEST_AGENTS=300

# ===== Docker Configuration =====
COMPOSE_PROJECT_NAME=decentralai
COMPOSE_FILE=docker-compose.yml

# ===== Logging =====
LOG_LEVEL=info
LOG_FORMAT=json

# ===== Rate Limiting =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== Feature Flags =====
ENABLE_CEO_MODE=true
ENABLE_MAKER_MODE=true
ENABLE_DS_STAR=true
ENABLE_HYDRA=true
ENABLE_MASUMI=true

# ===== Development =====
DEBUG=false
VERBOSE_LOGGING=false
